<!--[if IE 9 ]><html class="ie9"><![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pillow</title>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

</head>
<body>


       <header id="header">
            <ul class="header-inner">
            
                <li class="logo hidden-xs">
                    <a href="/">Pillow</a>
                </li>
                
                <li class="pull-right">
                <ul class="top-menu">

                    <li >
                        <a class="glyphicon-menu" href=""><i class="fa fa-users fa-2x"></i> &nbsp;About </a>
                    </li>
              
                    <li id="top-search">
                        <a class="glyphicon-menu" href=""><i class="fa fa-search fa-2x"></i>&nbsp;Search</a>
                    </li>

                    <% if user_signed_in? %>
                      <li id="">
                        <a class="glyphicon-menu" href=""><i class="fa fa-bell fa-2x"></i>&nbsp;Notif</a>
                      </li>
                      <li >
                        <%= link_to edit_user_registration_path, :class => 'glyphicon-menu' do %>
                            <i class="fa fa-edit fa-2x"></i>&nbsp;Edit
                        <% end %>
                      </li>

                      <li >
                        <%= link_to destroy_user_session_path, method: :delete, :class => 'glyphicon-menu' do %>
                            <i class="fa fa-sign-out fa-2x"></i>&nbsp;Sign out
                        <% end %>
                      </li>

                      <li >
                        <%= link_to user_path(current_user.id), :class => 'glyphicon-menu' do %>
                            <i class="fa fa-user fa-2x"></i>&nbsp;Mon Profil
                        <% end %>
                      </li>

                    <% else %>

                      <li >
                        <%= link_to new_user_registration_path, :class => 'glyphicon-menu' do %>
                            <i class="fa fa-user-plus fa-2x"></i>&nbsp;Sign up
                        <% end %>
                      </li>

                      <li >
                        <%= link_to new_user_session_path, :class => 'glyphicon-menu' do %>
                            <i class="fa fa-sign-in fa-2x"></i>&nbsp;Login
                        <% end %>
                      </li>

                    <% end %>
                    <%= link_to host_apparts_path, :class => 'glyphicon-menu' do %>
                      <i class="fa fa-home fa-2x"></i>&nbsp;Become a Host
                    <% end %>

                  </li>
              </ul>
            
            <!-- Top Search Content -->
            <div id="top-search-wrap">
                <%= form_tag('/apparts/index', :method => :get) do -%> <!--method get car de base form_tag a une method post -->
                  <div><%= text_field_tag 'query', nil, placeholder: "Où allez vous ?" %><%= submit_tag 'Go' %>
                  <i id="top-search-close">&times;</i>

                  </div>
                <% end -%>



            </div>
        </header>
        
        <section id="main">
    
            
     
        
            <section id="content">
                <div class="container">

                  <%= yield %>
              </div>
            </section>
        </section>
        
        <footer id="footer">
           <p> Pillow© - Tous droits réservés</p>
        </footer>
    
